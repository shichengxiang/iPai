<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp1"
    android:paddingBottom="@dimen/dp1">

    <RelativeLayout
        android:id="@+id/tab1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_b1"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_action_search"/>

        <TextView
            android:id="@+id/tv_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_b1"
            android:layout_centerHorizontal="true"
            android:text="优选"
            android:textSize="@dimen/dp8"
            android:textColor="@color/selector_txt"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_b2"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_action_search"/>

        <TextView
            android:id="@+id/tv_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_b2"
            android:layout_centerHorizontal="true"
            android:text="发现"
            android:textSize="@dimen/dp8"
            android:textColor="@color/selector_txt"/>
    </RelativeLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"/>

    <RelativeLayout
        android:id="@+id/tab3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_b3"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_action_search"/>

        <TextView
            android:id="@+id/tv_b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_b3"
            android:layout_centerHorizontal="true"
            android:text="关注"
            android:textSize="@dimen/dp8"
            android:textColor="@color/selector_txt"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_b4"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_action_search"/>

        <TextView
            android:id="@+id/tv_b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_b4"
            android:layout_centerHorizontal="true"
            android:text="我的"
            android:textSize="@dimen/dp8"
            android:textColor="@color/selector_txt"/>
    </RelativeLayout>

</LinearLayout>